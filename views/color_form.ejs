<%- include('header') -%>
<nav class="nav">
  <h1><%= title %></h1>
  <div>
    <a href="/home/inventory">Back</a>
    <a href="/home/inventory/create/item">Create New Item</a>
  </div>
</nav>

<form
  action="/home/inventory/update/colors/add"
  method="POST"
  onSubmit="document.getElementById('submitAdd').disabled=true;"
  class="updateColorForm border1color"
>
  <h2>Add a new color</h2>
  <input type="color" name="color" />
  <div style="display: flex">
    <div style="display: flex; align-items: center">
      <h2>Name:</h2>
      <input
        class="textInput"
        type="text"
        name="name"
        minlength="1"
        maxlength="10"
        required
      />
    </div>
    <button id="submitAdd" type="submit" class="btnStyleYes">Submit</button>
  </div>
</form>

<form
  action="/home/inventory/update/colors/remove"
  method="POST"
  onSubmit="document.getElementById('submitRemove').disabled=true;"
  class="updateColorForm border2color"
>
  <h2>Remove a color</h2>
  <% if (color_in_use) { %>
  <p style="color: red">
    Please remove items using this color before deleting.
  </p>
  <% } %>
  <select name="value" id="selection">
    <% color_list.map(color => { %>
    <option value="<%= color.name %>"><%= color.name %></option>
    <% }) %>
  </select>
  <button
    id="submitRemove"
    type="submit"
    class="btnStyleNo"
    onclick="return confirm('Delete selected color?')"
  >
    Submit
  </button>
</form>
<%- include('footer') -%>
