<%- include('header') -%>
<nav class="nav">
  <h1><%= title %></h1>
  <form action="/home/inventory/sort/color" method="GET">
    <p>Sort by Color:</p>
    <select name="value" id="sort">
      <option value="All">All</option>
      <% color_list.map(color => { %>
      <option value="<%= color.name %>"><%= color.name %></option>
      <% }) %>
    </select>
    <button type="submit">Submit</button>
  </form>

  <div>
    <a href="/">Home</a>
    <a href="/home/inventory/create/item">Create New Item</a>
    <a href="/home/inventory/update/colors">Update Colors</a>
  </div>
</nav>

<div class="container">
  <% item_list.forEach(item => { %>
  <div
    class="item"
    style="
      border-color: rgba(
        <%= item.color.red %>,
        <%= item.color.green %>,
        <%= item.color.blue %>,
        0.3
      );
    "
  >
    <a href="/home/inventory/item/<%= item._id %>"
      ><span class="cover"></span
    ></a>
    <h2>Item Name: <%= item.title %></h2>
    <p>
      <%= item.shape.shapeType %> shape with a color of <%= item.color.name %>
    </p>
    <div
      style="
        width: <%= item.shape.width %>px;
        height: <%= item.shape.height %>px;
        fill: rgb(
          <%= item.color.red %>,
          <%= item.color.green %>,
          <%= item.color.blue %>
        );
      "
    >
      <%- include(`../public/images/${item.shape.shapeType}.svg`) -%>
    </div>
  </div>

  <% }) %>
</div>
<%- include('footer') -%>
